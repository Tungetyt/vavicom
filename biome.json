{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			".next",
			"dist",
			"node_modules",
			"pnpm-lock.yaml",
			"yarn.lock",
			"package-lock.json"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useSelfClosingElements": {
					"level": "off"
				}
			}
		},
		"ignore": []
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "none",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": false
		}
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
